{
    "compilerOptions": {
        "lib": [
            "es2022"
        ],
        "target": "es2022",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "./dist",
        "incremental": true,
        "strict": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true
    },
    "include": [
        "src/**/*.ts"
    ]
}